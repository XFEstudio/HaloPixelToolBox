<Application x:Class="HaloPixelToolBox.Installer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HaloPixelToolBox.Installer"
             StartupUri="/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Style/MainStyle.xaml"/>
                <ResourceDictionary Source="/Resources/Style/MyControlsStyle.xaml"/>
                <ResourceDictionary Source="/Resources/Style/Theme/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
