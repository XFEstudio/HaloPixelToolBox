<Page x:Class="HaloPixelToolBox.Installer.Views.Pages.InstallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:viewmodel="clr-namespace:HaloPixelToolBox.Installer.ViewModel.Pages"
      xmlns:ctr="clr-namespace:HaloPixelToolBox.Installer.Views.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HaloPixelToolBox.Installer.Views.Windows"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewmodel:InstallPageViewModel}"
      Title="InstallPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.ColumnSpan="3" Text="安装花再工具箱" Margin="10,10,0,0" FontSize="18"/>
            <TextBlock Grid.Row="1" Text="安装目录：" Margin="10,0,0,0" FontSize="15" VerticalAlignment="Center"/>
            <ctr:TextEditor Grid.Row="1" Grid.Column="1" HintText="选择安装目录..." Padding="5" VerticalAlignment="Center" Text="{Binding InstallPath}" IsReadOnly="True"/>
            <ctr:RoundButton Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding ChangeInstallPathCommand}">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="更改目录" Margin="4" Foreground="{DynamicResource MainColor}"/>
            </ctr:RoundButton>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ctr:CheckButton IsChecked="{Binding AgreementChecked}">
                    <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock VerticalAlignment="Center">
                            <Span>
                                <Run Text="勾选则代表同意"/>
                            </Span>
                            <Hyperlink Foreground="{DynamicResource MainColor}" Command="{Binding ViewEULAAgreementCommand}">
                                <Run Text="软件最终用户许可协议"/>
                            </Hyperlink>
                            <Span>
                                <Run Text="和"/>
                            </Span>
                            <Hyperlink Foreground="{DynamicResource MainColor}" Command="{Binding ViewUserPrivateAgreementCommand}">
                                <Run Text="用户隐私协议"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </ctr:CheckButton>
            </StackPanel>
            <ctr:RoundButton Grid.Column="1" Grid.Row="2" Height="40" Margin="10,0" Command="{Binding GotoInstallProgressPageCommand}" IsEnabled="{Binding AgreementChecked}" VerticalAlignment="Top">
                <TextBlock Text="开始安装" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource MainColor}" FontSize="20"/>
            </ctr:RoundButton>
        </Grid>
    </Grid>
</Page>