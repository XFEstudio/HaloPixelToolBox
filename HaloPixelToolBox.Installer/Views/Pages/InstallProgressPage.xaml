<Page x:Class="HaloPixelToolBox.Installer.Views.Pages.InstallProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:ctr="clr-namespace:HaloPixelToolBox.Installer.Views.Controls"
      xmlns:viewmodel="clr-namespace:HaloPixelToolBox.Installer.ViewModel.Pages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HaloPixelToolBox.Installer.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=viewmodel:InstallProgressPageViewModel}"
      Title="InstallProgressPage" Loaded="Page_Loaded">

    <Grid>
        <Grid x:Name="installGrid" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="正在安装中" FontSize="15" Margin="10,0,0,0"/>
            <ctr:ModernProgressBar x:Name="progress" Grid.Column="1" Margin="10,0,10,0" Height="10" ProgressBarCornerRadius="5" IsBusy="True" Value="100"/>
        </Grid>
        <Grid x:Name="successGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="已完成安装" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32"/>
            <ctr:RoundButton Grid.Column="1" Grid.Row="2" Height="40" Margin="10,0" Command="{Binding ConfirmSuccessCommand}" VerticalAlignment="Center">
                <TextBlock Text="确定" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource MainColor}" FontSize="20"/>
            </ctr:RoundButton>
        </Grid>
    </Grid>
</Page>
